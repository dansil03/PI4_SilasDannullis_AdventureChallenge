
@model AdventureChallenge.Models.Challenge

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>ChallengeName</th>
            <th>ChallengeDescription</th> 
            <th>NumberOfPlayers</th>
            <th>DayTime</th>
            <th>Start Challenge</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>@Model.ChallengeName</td>
            <td>@Model.ChallengeDescription</td>
            <td>@Model.NumberOfPlayers</td>
            <td>@Model.DayTime</td>
            <td>
                <form asp-action="AddChallengeToUserChallenge">
                    <button type="submit" class="btn btn-success">Start</button>
                </form>
            </td>
        </tr>
    </tbody>
</table>