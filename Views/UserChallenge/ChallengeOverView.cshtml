@model AdventureChallenge.Models.UserChallenge

@{
    var photoPath = "~/ProofImages/" + Model.ImgUrl; 
}

<div class="card mb-3" style="max-width: 1000px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@photoPath" asp-append-version="true" class="img-fluid rounded-start" alt="challengeImg">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Titel</h5>
                <p class="card-text">@Model.ProofText</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
        </div>
    </div>
</div>