@model AdventureChallenge.Models.User

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>ChallengeName</th>
            <th>ChallengeDescription</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.UserChallenges)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Challenge.ChallengeName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Challenge.ChallengeDescription)
                </td>
                <td>
                    <form asp-action="FinishChallenge" asp-route-id="@item.UserChallengeId">
                        <button type="submit" class="btn btn-success">Start</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>