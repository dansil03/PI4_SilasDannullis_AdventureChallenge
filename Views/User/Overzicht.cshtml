@{
}

<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Password</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (User user in ViewBag.users)
            {
                <tr>
                    <td>
                        @user.id
                    </td>
                    <td>
                        @user.UserName
                    </td>
                    <td>
                        @user.Password
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <td>
                        <form asp-action="Edit" asp-route-id="@user.id">
                            <button type="submit" class="btn btn-warning">Edit</button>
                        </form>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>
